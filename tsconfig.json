{
    "compilerOptions": {
        "outDir": "build",
        "rootDir": "src",
        "sourceMap": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "module": "ESNext",
        "target": "ESNext",
        "strict": true,
        "typeRoots": ["node_modules/@types", "src/custom-types"], 
        "moduleResolution": "node",
        "esModuleInterop": true,
        "baseUrl": ".",
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}